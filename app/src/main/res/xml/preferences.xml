<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:iconSpaceReserved="false">

    <PreferenceCategory
        android:title="환경설정"
        app:iconSpaceReserved="false">

        <SwitchPreference
            android:key="push"
            android:title="푸쉬알림"
            android:defaultValue="false"
            />

        <SwitchPreference
            android:key="private"
            android:title="공개/비공개설정"
            android:defaultValue="false"
            android:summary="자신이 작성한 타임라인 및 리뷰 공개 설정"
            />

        <EditTextPreference
            android:key="edit_text_preference_1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="닉네임"
            android:summary="닉네임을 설정하세요 \n(초기화면과 다른 닉네임을 입력해야 적용됩니다)"/>


    </PreferenceCategory>
</PreferenceScreen>